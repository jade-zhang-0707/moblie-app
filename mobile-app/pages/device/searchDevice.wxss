.searchdevice-page{
  position:relative;
  height:100%;
  width:100%;
}
.searchdevice-page > view:first-child{
  width:70%;
  height:25px;
  margin:10px auto;
  text-align:center;
  line-height:25px;
  vertical-align:middle;
  border:1px solid #1296db;
  border-radius:5px;
  color:#1296db;
}

.searchdevice-page > view:first-child image{
  height:20px;
  width:20px;
  position:relative;
  top:3px;
}

.searchdevice-page .product-item{
  text-align:center;
  display:inline-block;
  width:100%;
  padding-bottom:10px;
  border-bottom:1px solid #b1b1b1;
}

.searchdevice-page .product-item:last-child{
  border-bottom:none;
}

.searchdevice-page .product-item cover-image{
  width:200px;
  margin:10px auto;
}