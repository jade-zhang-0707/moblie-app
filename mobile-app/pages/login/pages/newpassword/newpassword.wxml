<!--pages/login/pages/newpassword.wxml-->
<view class="page-body">
  <form catchsubmit="formSubmit">
    <view class="page-section">
      <view class="weui-cells__title">设置新的密码</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" name="firstpw" password type="text" maxlength="16"  placeholder="请输入新密码"/>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" name="secondpw" password maxlength="16" placeholder="请再次输入密码" />
        </view>
      </view>
      <view class="weui-cells__title">密码长度8~16位，包含数字、字母、字符任意两种</view>
    </view>
    <view class="btn-area">
      <button type="primary" formType="submit">提交</button>
    </view>
  </form>
</view>
