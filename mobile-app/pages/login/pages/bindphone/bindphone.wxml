<!--pages/login/pages/bindphone/bindphone.wxml-->
<import src="../../common/head.wxml" />

<view class="container">
  <template is="head" data="{{title: '健康生活'}}"/>
  <view class="page-body">
    <form catchsubmit="formSubmit">
      <view class="page-section">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" name="phone" maxlength="11" type="number" placeholder="请输入手机号" />
          </view>
        </view>
      </view>
      <view class="page-section">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" name="vcode" type="text" placeholder="请输入验证码" />
            <button id="" slot="footer" type="default" class="weui-vcode-btn">获取验证码</button>
          </view>
        </view>
      </view>
      <view class="btn-area">
        <button type="primary" formType="submit">绑定手机号</button>
      </view>
    </form>
  </view>
</view>
