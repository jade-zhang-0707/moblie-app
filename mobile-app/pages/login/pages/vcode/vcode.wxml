<!--pages/login/pages/vcode/vcode.wxml-->
  <view class="page-body">
    <form catchsubmit="formSubmit">
      <view class="page-section">
        <view class="weui-cells__title">向{{phoneNumble}}手机号发送了验证码</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" name="vcode" type="text" placeholder="请输入验证码" />
            <button id="" slot="footer" type="default" class="weui-vcode-btn">获取验证码</button>
          </view>
        </view>
      </view>
      <view class="btn-area">
        <button type="primary" formType="submit">下一步</button>
      </view>
    </form>
  </view>