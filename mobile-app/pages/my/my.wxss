.my-page .options{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  border-bottom:1px solid #f0f8ff;
  line-height:50px;
}

.my-page .options .left{
  margin: 0 40rpx;
  height:30px;
  width:30px;
}

.my-page .options .right{
  margin-right: 27rpx;
  height:40px;
  width:30px;
}

.my-page .options .center{
  flex: 1;

}

