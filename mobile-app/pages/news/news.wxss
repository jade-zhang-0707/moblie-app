/* pages/news/news.wxss */

.news-page{
  position:relative;
  width:100%;
  height:100%;
}

.news-page .item{
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  line-height:50px;
  /* border-bottom: 1rpx #000000; */
}

.news-page .item .title{
  font-size: 40rpx;
  text-align: left;
}

.news-page .item .date{
  font-style: #dfd7d7;
  font-size: 35rpx;
  text-align: left;
  height: 40px;
}

.news-page .item .content{
  font-size: 40rpx;
  text-align: left;
}

.news-page .item .line{
  background-color: #000000;
  width: 100%;
  height: 3rpx;
}