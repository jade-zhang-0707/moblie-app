/* pages/mypage/name.wxss */

.name-page{
  position:relative;
  width:100%;
  height:100%;
}

.name-page .panel{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.name-page .panel .text{
  height: 40px;
  line-height:40px;
  border: 1rpx solid #d3d0c9;
  flex:1;
}

.name-page .panel .button{
  margin-left: 20rpx;
  text-align: center;
  background-color: #0186fa;
  color: #fcf4f4; 
  font-size:12px;
  padding:0px;
  vertical-align:middle ;
  line-height:40px;
  Height:40px;
  Width:60px;
}