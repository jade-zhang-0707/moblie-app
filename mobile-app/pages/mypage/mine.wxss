/* pages/mypage/mine.wxss */
.mine-page{
  position:relative;
  width:100%;
  height:100%;
}

.mine-page .options .photo{
  margin-right: 27rpx;
  height:40px;
  width:50px;
  border-radius:50%;
  overflow: hidden;
}

.mine-page .options{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  border-bottom:1px solid #f0f8ff;
  line-height:50px;
}

.mine-page .options .left{
  margin: 0 40rpx;
  height:30px;
  width:60px;
  flex:1;
}

.mine-page .options .right{
  margin-right: 27rpx;
  height:40px;
  width:30px;
}

.mine-page .options .center{
  margin-right: 27rpx;
  height:40px;
  width:50px;
}

