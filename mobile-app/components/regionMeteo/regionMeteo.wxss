/* components/regionMeteo/regionMeteo.wxss */
.region-meteo{
  padding:5px 15px;
}
.region-meteo .meteo image{
  width:32px;
  height:32px;
  float:left;
}

.region-meteo .meteo label{
  margin-left:20px;
  display:inline-block;
  height:32px;
  line-height:32px;
  vertical-align: middle;
}

.region-meteo .meteo.sun label,
.region-meteo .quality.sun{
  color:rgb(243, 138, 10);
}

.region-meteo .meteo.overcast label,
.region-meteo .quality.overcast{
  color:aquamarine;
}

.region-meteo .quality label{
  margin-left:20px;
}

.region-meteo .quality sub{
  font-size:10px;
  position:relative;
  top:-5px;
}

.region-meteo .indoor{
  background-image:url("data:image/png;base64,");
  width:100%;
  height:200px;
  background-size:100% 100%;
  background-repeat:no-repeat;
  -moz-background-size:100% 100%;
  font-size:12px;
}

.region-meteo .indoor view:first-child{
  text-align:center;
  padding-top:50px;
}

.region-meteo .indoor view:nth-child(2){
  text-align:center;
  padding-top:20px;
}

.region-meteo .indoor view:last-child{
  text-align:center;
  margin-top:20px;
}
.region-meteo .indoor view:last-child image{
  width:32px;
  height:32px;
  display:inline-block;
}

.region-meteo .indoor view:last-child label{
  height:32px;
  line-height:32px;
  vertical-align: top;
  margin-left:10px;
  margin-right:40px;
}

.region-meteo .indoor view:last-child label:last-child{
  margin-right:0px;
}

.region-meteo .chart{
  width:80%;
  height:250px;
  margin:auto;
  margin-top:10px;
  padding-bottom:10px;
  border-radius:5px;
  box-shadow: 0px 0px 5px #888888;
}
#mychart-dom-bar {
  width: 100%;
  height: 300px;
}

.region-meteo .chart view:last-child{
  margin-top:-40px;
  text-align:center;
}
.region-meteo .chart button{
  display:inline-block;
  background:transparent;
  outline:none;
  border-radius:0px;
  font-weight:normal;
  padding:0px !important;
  width:60px;
  height:40px !important;
  line-height:40px;
  vertical-align:middle;
  text-align:center;
  border:1px solid #b1b1b1;
  border-right:none;
  margin-bottom:0px;
}

.region-meteo .chart button:last-child{
  border-right:1px solid #b1b1b1;
  
}

.region-meteo .chart button.selected{
  background-color:#1296db;
  color:#fff;
}

